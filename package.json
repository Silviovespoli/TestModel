{
  "name": "chat-ai-avanzata",
  "version": "1.0.1",
  "description": "Chat AI avanzata - Netlify Static Site con Functions serverless per OpenAI e Anthropic",
  "main": "public/index.html",
  "scripts": {
    "dev": "netlify dev",
    "build": "echo 'Installing function dependencies...' && cd netlify/functions && npm install && cd ../.. && echo 'Verifica integrità files...' && npm run lint && npm run test && echo 'Build completato - progetto pronto per deploy Netlify'",
    "preview": "netlify dev --prod",
    "start": "netlify dev",
    "deploy": "netlify deploy",
    "deploy:prod": "netlify deploy --prod",
    "lint": "echo 'Linting JavaScript files...' && find public/assets/js -name '*.js' -exec node -c {} \\;",
    "test": "echo 'Testing configuration...' && node -e \"console.log('✓ Package.json valido')\" && node -e \"console.log('✓ Netlify Functions OK')\"",
    "serve": "npx http-server public -p 8080 -c-1",
    "functions:dev": "netlify functions:serve",
    "clean": "rm -rf .netlify"
  },
  "dependencies": {
    "openai": "^4.20.1",
    "@anthropic-ai/sdk": "^0.9.1"
  },
  "devDependencies": {
    "netlify-cli": "^17.10.1",
    "http-server": "^14.1.1"
  },
  "keywords": [
    "chat",
    "ai",
    "openai",
    "anthropic",
    "claude",
    "gpt",
    "frontend",
    "netlify",
    "functions",
    "serverless",
    "javascript",
    "nodejs"
  ],
  "author": {
    "name": "Roo",
    "email": "roo@example.com",
    "url": "https://github.com/your-username"
  },
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/chat-ai-avanzata.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/chat-ai-avanzata/issues"
  },
  "homepage": "https://github.com/your-username/chat-ai-avanzata#readme",
  "private": false,
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/your-username"
  },
  "netlify": {
    "functions": {
      "directory": "netlify/functions"
    }
  },
  "config": {
    "port": 8888
  }
}
